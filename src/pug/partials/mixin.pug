mixin product-cart(img)
    .nav__cart__info__product
        img(src=img alt="")
        .nav__cart__info__product__content
            p   Áo sơ mi Nam
            span.price 120.000
                small đ
        i.fas.fa-times

mixin policy(className, img, param)
    div(class=className)
        img(src=img)
        p= param

mixin testimonial(img)
    .testimonial__bg__content__img
        img(src=img)
        .testimonial__bg__content__img__text
            p "Vẫn là vẻ bề ngoài vô cùng đơn giản với các tông màu trắng, hồng làm chủ đạo nhưng lại tạo ra sức hút kỳ lạ với những ai cầm trên tay sản phẩm ấy! Với công nghệ cải tiến mới nhất, hãng Rohto"
            span TUTILE  
                i _Giám đốc phát triển sản phẩm

mixin product-item(img, h4, price, old, disable, red, right, left)
    .product__items__detail
        .product__items__detail--arrow-right
            label(for=right).fas.fa-arrow-right
        .product__items__detail--arrow-left
            label(for=left).fas.fa-arrow-left
        img(src=img)
        .product__items__detail__content.detail-content
            h4= h4
            p Mỹ phẩm châu Âu
            span.price(class=red)= price
                small đ
            span.price.old(class=disable)= old
                small đ
        .product__items__detail__icon.item-buying
            button MUA HÀNG
            a(href="#")
                i.fas.fa-heart
            a(href="#")
                i.fas.fa-sync-alt

mixin social-item(className, classIcon, icon, name, disable)
    div.item(class=className)
        div.icon(class=classIcon)
            i(class=icon)
        p= name
        .bar(class=disable)

mixin list-path(list)
    ul 
        each item in list
            li(class=item.className)
                a(href="#")= item.content
                i.fas.fa-angle-right(class=item.classIcon)

mixin btn-social(classBtn, classIcon, content, disable)
    .detail__info__social__content__item
        a(href="#" class=classBtn)
            i(class=classIcon)
            | #{content}
        .quantity(class=disable)
            span 0

mixin info-content(img, classText, classImg)
    .info-product__content__item
        .info-product__content__item__text(class=classText)
            h5 the mark of a legend
            .border-bottom
            p Tự hào được ghi là năm mà Tyffany &amp; Co là
            p thành lập, bộ sưu tập mang tính biểu tượng này cung cấp cho một cái gật đầu với
            p qua trong khi thể hiện một cảm giác hiện đại với kiểu dáng đẹp 
            p đường cong và đường nét mượt mà.
        .info-product__content__item__img(class=classImg)
            img(src=img)

