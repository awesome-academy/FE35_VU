extends ../layouts/shopping-cart

block main-cart
    main
        // Path
        section.path
            .box
                .path__content
                    +list-path(listPathCart)
        // Content Cart
        section.cart
            .box
                .cart__content
                    .cart__content__title
                        h1 Giỏ hàng
                    .cart__content__table
                        table
                            tr
                                each item in listThTable
                                    th= item
                            +table('../../../assets/img/cart/product.jpg', '1', '345.000')
                            +table('../../../assets/img/cart/product.jpg', '2', '690.000')
                    .cart__content__btn
                        button(type="button") Tiếp tục mua hàng
                        button.delete(type="button") Xóa
                        button.update(type="button") Cập nhật 